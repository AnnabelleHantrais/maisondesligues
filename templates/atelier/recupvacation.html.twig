{% extends 'base.html.twig' %}

{% block title %}Vacations{% endblock %}

{% block body %}
    
    {% block header %}
        {% include('header.html.twig') %}
    {%  endblock %}
    <div class="container">
        <h1>Vacations</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date de d√©but</th>
                        <th>Date de fin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for vacation in vacations %}
                    <tr>
                        <td>
                            <input type="datetime-local" class="form-control" name="vacations[{{ vacation.id }}][dateDebut]" value="{{ vacation.dateheuredebut|date('Y-m-d H:i') }}">
                        </td>
                        <td>
                            <input type="datetime-local" class="form-control" name="vacations[{{ vacation.id }}][dateFin]" value="{{ vacation.dateheurefin|date('Y-m-d H:i') }}">
                        </td>
                        <td>
                            <a href ="{{ path('edit_vacation', {'id': vacation.id}) }} " type="submit" class="btn btn-primary">Modifier</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        
    </div>
{% endblock %}
