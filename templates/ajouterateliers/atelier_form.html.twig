
{% extends 'base.html.twig' %}

{% block title %}Ajouter un atelier{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="container">
        
        <h1>Ajouter un atelier</h1>

        {{ form_start(form, {'attr': {'class': 'my-form'}}) }}
        <div class="form-errors my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="form-row col-md-9">
            <div class="form-group row gy-2">
                {{ form_row(form.libelle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row gy-2">
                {{ form_row(form.nbPlacesMaxi, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row gy-2">
                 {{ form_label(form.themes) }}
                {% for theme in form.themes%}
                    <div class="form-check form-check-inline mb-2 col-md-5">
                        {{ form_widget(theme, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(theme, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Valider</button>
            <a href="{{ path('app_ajouterateliers') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
