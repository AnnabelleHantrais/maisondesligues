{% block body %}

    {% block header %}
        {% include('header.html.twig') %}
    {%  endblock %}



    <div class="container">
        <div class="col-md-5">

            <div class="row align-items-center">
                <div class="col-1 align-items-center"><a href="{{ path('app_vacation', {'id': id }) }}"><i class="fa-solid fa-circle-arrow-left"></i></a></div>
                <div class="col-11"><h1>Modifier Vacation</h1></div>
            </div>
