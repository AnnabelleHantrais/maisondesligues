{%  block header %} 
    <header>

        <a href="{{ path('app_home') }}"> <img src="{{ asset('images/Mdl.png') }}" alt="Logo MDL" id="logo-mdl"></a>
        <nav>
            <ul>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if is_granted('ROLE_INSCRIT') and not is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_inscription') }}">Inscription</a></li>

                    {% elseif is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_ajouterateliers') }}">Ajouter une activité</a></li>
                        <li><a href="{{ path('app_select_atelier') }}">Modifier une vacation</a></li>
                        
                    
                    {% endif %}
                <li><a href="{{ path("app_logout") }}"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                {% else %}
                <li><a href="{{ path('app_register') }}">Créer mon compte</a></li>
                <li><a href="{{ path('app_login') }}">Connexion</a></li>

                {% endif %}

            </ul>
        </nav>
    </header>

{%  endblock %}