{% extends 'base.html.twig' %}

{% block title %}Création du compte{% endblock %}


{% block body %}
    {% block header %}
        {% include('header.html.twig') %}
    {%  endblock %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class='container'>
        <div class='row justify-content-md-center'>
            <div class='col col-sm-6'>
                <section id="login" >
                    <h3>Création du compte</h3>
                    {{ form_errors(registrationForm) }}

                  {{ form_start(registrationForm) }}
                  <div class="form-group">  {{ form_row(registrationForm.numlicence, {label: 'Numéro de licence'}) }}</div>
                   <div class="form-group">  {{ form_row(registrationForm.password, {label: 'Mot de passe'}) }} </div>

                  <div class="form-group">   <input type="submit" class="btn btn-primary" value="Créer mon compte" /></div>
                    {{ form_end(registrationForm) }}

                </section>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}



{% endblock %}
